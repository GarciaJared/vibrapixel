---
import Sun from "../assets/icons/sun.astro";
import background from "../assets/background.svg";
---

<div id="container">
	<main>
		<div class="intro">
			<div class="title">
				<h1>En cada pixel</h1>
				<h2>hay una vibrante historia</h2>
			</div>
			<div class="sun">
				<Sun />
			</div>
		</div>
	</main>
</div>

<style>
	#container {
		font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova",
			"Nimbus Sans", Arial, sans-serif;
		height: 100%;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
	}
	.intro {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		position: relative;
		margin-top: -100px;

	}
	.title {
		position: absolute;
		z-index: 2;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}
	.sun{
		margin-top: 0;
		position: relative;
	}
	#hero {
		display: flex;
		align-items: start;
		flex-direction: column;
		justify-content: center;
		padding: 16px;
	}

	h1 {
		font-size: 30px;
		margin-top: 0.25em;
		color: #fff;
	}
	h2 {
		font-size: 22px;
		margin-top: 0.25em;
		color: #fff;
	}

	#links {
		display: flex;
		gap: 16px;
	}

	#links a {
		display: flex;
		align-items: center;
		padding: 10px 12px;
		color: #111827;
		text-decoration: none;
		transition: color 0.2s;
	}

	#links a:hover {
		color: rgb(78, 80, 86);
	}

	#links a svg {
		height: 1em;
		margin-left: 8px;
	}

	#links a.button {
		color: white;
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		box-shadow:
			inset 0 0 0 1px rgba(255, 255, 255, 0.12),
			inset 0 -2px 0 rgba(0, 0, 0, 0.24);
		border-radius: 10px;
	}

	#links a.button:hover {
		color: rgb(230, 230, 230);
		box-shadow: none;
	}
</style>
