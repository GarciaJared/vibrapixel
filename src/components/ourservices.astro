---
import Highcard from "./highcard.astro";
---

<section class="ourservices">
    <div class="card1">
        <Highcard title="Diseño" />
    </div>
    <div class="card2">
        <Highcard class="centered-card" title="Diseño Gráfico" />
    </div>
    <div class="card3">
        <Highcard title="Consultoria de imagén" />
    </div>
    <div class="moreinfo"><Highcard title="Saber más" /></div>
</section>

<style>
    .ourservices {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        grid-template-rows: repeat(5, 1fr);
        gap: 8px;
    }

    .card1 {
        grid-row: span 4 / span 4;
        grid-column-start: 2;
        grid-row-start: 2;
        height: 100%;
    }

    .card2 {
        grid-row: span 3 / span 3;
        grid-column-start: 3;
        grid-row-start: 2;
    }

    .card3 {
        grid-row: span 4 / span 4;
        grid-column-start: 4;
        grid-row-start: 2;
    }

    .moreinfo {
        grid-column-start: 3;
        grid-row-start: 5;
        background-color: #e2014e;
        height: 90%;
    }
</style>
